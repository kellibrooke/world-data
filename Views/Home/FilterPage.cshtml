<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>List Of Countries</h1>
     <form action="/filter" method="post">
          <div class="form-group">
            <label for="sortField">Choose what you want to sort by:</label>
            <select class="form-control" id="sortField">
              <option value="name">Name</option>
              <option value="continent">Continent</option>
              <option value="population">Population</option>
            </select>
          </div>
            <div class="form-group">
            <label for="sortType">Choose what you want to sort by:</label>
            <select class="form-control" id="sortField">
              <option value="ASC">Ascending</option>
              <option value="DESC">Descending</option>
            </select>
          </div>
            <button type="submit">Sort!</button>
     </form>

      @{
           string sortField = Request.Form["sortField : selected"];
            string sortType = Request.Form["sortType : selected"];
            foreach (var country in Model)
            {
               GetSort(sortField, sortType);
            }
        }
  </body>
</html>